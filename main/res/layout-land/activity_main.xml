<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/albumManagerMainLayout"
    android:orientation="horizontal"
    tools:context=".Activities.MainActivity">

    <RelativeLayout
        android:id="@+id/albumManagerRelativeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageViewArrowUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/arrowSize"
            android:src="@drawable/arrow_up"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/imageViewArrowDown"
            android:layout_width="match_parent"
            android:layout_height="@dimen/arrowSize"
            android:src="@drawable/arrow_down"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/albumManagerMainFirstGrid"
        android:gravity="center"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/linearCamera"
            android:layout_gravity="center"
            android:padding="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/boxImageSize"
                    android:layout_height="@dimen/boxImageSize"
                    android:id="@+id/imageStartCamera"
                    android:src="@drawable/camera"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zdjęcie"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/boxFontSize"
                    android:textColor="@color/fontColor"
                    android:layout_gravity="bottom"
                    android:layout_below="@+id/imageStartCamera"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/linearPhoto"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/boxImageSize"
                    android:layout_height="@dimen/boxImageSize"
                    android:id="@+id/imageViewPhotos"
                    android:src="@drawable/photo"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Album"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/boxFontSize"
                    android:textColor="@color/fontColor"
                    android:layout_gravity="bottom"
                    android:layout_below="@+id/imageViewPhotos"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/albumManagerMainSecondGrid"
        android:gravity="center"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearVGrid"
            android:gravity="center"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageViewGrid"
                    android:layout_width="@dimen/boxImageSize"
                    android:layout_height="@dimen/boxImageSize"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:src="@drawable/grid" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageViewGrid"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Kolaż"
                    android:textAlignment="center"
                    android:textSize="@dimen/boxFontSize"
                    android:textColor="@color/fontColor" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/linearWebsite"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/boxImageSize"
                    android:layout_height="@dimen/boxImageSize"
                    android:id="@+id/imageWebsite"
                    android:src="@drawable/web"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/boxFontSize"
                    android:textColor="@color/fontColor"
                    android:layout_gravity="bottom"
                    android:layout_below="@+id/imageWebsite"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
